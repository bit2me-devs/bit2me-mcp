{
    "name": "@bit2me/mcp-server",
    "version": "4.1.0",
    "description": "Bit2Me MCP Server",
    "type": "module",
    "main": "build/index.js",
    "packageManager": "pnpm@10.0.0",
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=10.0.0"
    },
    "bin": {
        "bit2me-mcp-server": "./build/index.js"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "build:llms": "node scripts/generate-llms.js",
        "build:docs": "node scripts/generate-tools-docs.js",
        "prepublishOnly": "pnpm run build",
        "start": "node build/index.js",
        "dev": "pnpm dlx @modelcontextprotocol/inspector node build/index.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:e2e": "RUN_E2E=true vitest run tests/e2e",
        "test:e2e:watch": "RUN_E2E=true vitest tests/e2e",
        "test:fuzz": "vitest run tests/fuzz.test.ts",
        "test:coverage": "vitest run --coverage",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src/**/*.ts tests/**/*.ts --fix",
        "lint:fix": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
        "eslint": "eslint",
        "eslint:legacy": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
        "eslint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
        "prettier": "prettier --write .",
        "audit": "pnpm audit --audit-level=high",
        "secret-scan": "bash -c 'if command -v gitleaks >/dev/null 2>&1; then gitleaks protect --staged --verbose --redact; else echo \"⚠️ Gitleaks not found, skipping secret scan. Install it for better security.\"; fi' --",
        "clean": "rm -rf build coverage",
        "validate": "pnpm run typecheck && pnpm run lint && pnpm test",
        "prepare": "husky"
    },
    "keywords": [
        "mcp",
        "bit2me",
        "server"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bit2me-devs/bit2me-mcp.git"
    },
    "homepage": "https://mcp.bit2me.com",
    "author": "Bit2Me",
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.25.1",
        "axios": "^1.6.0",
        "dotenv": "^17.2.3",
        "zod": "^4.2.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.3.1",
        "@commitlint/config-conventional": "^20.3.1",
        "@eslint/js": "^9.39.2",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/node": "^25.0.3",
        "@typescript-eslint/eslint-plugin": "^8.53.0",
        "@typescript-eslint/parser": "^8.53.0",
        "@vitest/coverage-v8": "^4.0.17",
        "eslint": "^9.39.2",
        "eslint-plugin-security": "^3.0.1",
        "fast-check": "^4.5.3",
        "globals": "^16.5.0",
        "html-minifier-terser": "^7.2.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.8.0",
        "semantic-release": "^25.0.2",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.0",
        "typescript-eslint": "^8.53.0",
        "vitest": "^4.0.15"
    },
    "lint-staged": {
        "*": [
            "pnpm run secret-scan"
        ],
        "package.json": [
            "pnpm run audit"
        ],
        "pnpm-lock.yaml": [
            "pnpm run audit"
        ],
        "*.ts": [
            "pnpm run eslint -- --fix",
            "prettier --write",
            "vitest related --run"
        ],
        "*.{css,html,json,md}": [
            "prettier --write"
        ]
    }
}
