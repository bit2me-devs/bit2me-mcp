{
    "name": "@bit2me/mcp-server",
    "version": "1.3.0",
    "description": "Bit2Me MCP Server",
    "type": "module",
    "main": "build/index.js",
    "bin": {
        "bit2me-mcp-server": "./build/index.js"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "prepublishOnly": "npm run build",
        "start": "node build/index.js",
        "dev": "node build/index.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint src/**/*.ts tests/**/*.ts --fix",
        "lint:fix": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
        "eslint": "eslint",
        "eslint:legacy": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
        "eslint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
        "prettier": "prettier --write .",
        "prepare": "husky install"
    },
    "keywords": [
        "mcp",
        "bit2me",
        "server"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bit2me-devs/bit2me-mcp.git"
    },
    "homepage": "https://mcp.bit2me.com",
    "author": "Bit2Me",
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.22.0",
        "axios": "^1.6.0",
        "dotenv": "^17.2.3",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@eslint/js": "^9.39.1",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/node": "^24.10.1",
        "@typescript-eslint/eslint-plugin": "^8.48.0",
        "@typescript-eslint/parser": "^8.48.0",
        "@vitest/coverage-v8": "^4.0.13",
        "eslint": "^9.39.1",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.6.2",
        "semantic-release": "^25.0.2",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.0",
        "typescript-eslint": "^8.48.0",
        "vitest": "^4.0.13"
    },
    "lint-staged": {
        "*.ts": [
            "npm run eslint -- --fix",
            "prettier --write",
            "vitest related --run"
        ],
        "*.{css,html,json,md}": [
            "prettier --write"
        ]
    }
}
